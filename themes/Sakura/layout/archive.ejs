<div class="blank" style="padding-top: 75px;">
</div>
<div id="content" class="site-content">
  <div id="main">
    <header class="page-header">
      <h1 class="cat-title">
      归档</h1>
      <span class="cat-des">
        <p>
        Archives</p>
      </span>
    </header>
    <div id="main-part">
      <article class="art">
        <div class="art-main">
          <div class="art-content">
            <div id="archives">
              <p style="text-align:right;">
                [<span id="al_expand_collapse" style="cursor: s-resize;">
                全部展开/收缩</span>
              ]</p>
              <% var lastYear; var lastMonth; %>
              <% site.posts.sort('updated', theme.homePageSortType).each(function(post, i){ %>
              <% var currentYear = parseInt(date(post.updated, 'YYYY')); %>
              <% var currentMonth = parseInt(date(post.updated, 'YYYYMM')); %>
              <% if (lastYear != currentYear){ %>
                <% lastYear = currentYear; %>
                <h3 class="al_year"><%= date(post.updated, 'YYYY') %>年</h3>
              <% } %>
              <% if (lastMonth != currentMonth){ %>
                <% lastMonth = currentMonth; %>
                <ul class="al_mon_list">
                  <li class="al_li">
                    <span class="al_mon" style="cursor: s-resize;">
                      <%= date(post.updated, 'MM') %>月(<span id="post-num">
                      3</span>
                    篇文章)</span>
                    <ul class="al_post_list" style="">
              <% } %>
                      <li>
                        <a href="<%- url_for(post.path) %>">
                          <span style="color:#0bf;">
                          <%= date(post.updated, 'DD') %>日<%= time(post.updated) %></span>
                          <%= post.title %>
                        </a>
                      </li>
                      <% if (!site.posts.sort('updated', theme.homePageSortType).eq(i + 1) || currentMonth != parseInt(date(site.posts.sort('updated', theme.homePageSortType).eq(i + 1).updated, 'YYYYMM'))){ %>
                    </ul>
                  </li>
                </ul>
              <% } %>
              <% }) %>
            </div>
          </div>
        </div>
      </article>
    </div>
  </div>
</div>
